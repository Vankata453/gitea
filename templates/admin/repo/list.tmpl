							{{ctx.Locale.Tr "repo.forks"}}
							{{SortArrow "mostforks" "fewestforks" $.SortType false}}
						</th>
						<th>{{ctx.Locale.Tr "admin.repos.issues"}}</th>
						<th  data-sortt-asc="gitsize" data-sortt-desc="reversegitsize">
							{{ctx.Locale.Tr "admin.repos.size"}}
							{{SortArrow "gitsize" "reversegitsize" $.SortType false}}
						</th>
						<th  data-sortt-asc="lfssize" data-sortt-desc="reverselfssize">
							{{ctx.Locale.Tr "admin.repos.lfs_size"}}
							{{SortArrow "lfssize" "reverselfssize" $.SortType false}}
						</th>
						<th>{{ctx.Locale.Tr "Release Title"}}</th>
						<th>{{ctx.Locale.Tr "Release Created"}}</th>
						<th>{{ctx.Locale.Tr "Details"}}</th>
						<th>{{ctx.Locale.Tr "admin.notices.op"}}</th>
					</tr>
				</thead>
				<tbody>
					{{range .Repos}}
						{{if not (or .IsPrivate (not .LatestRelease) (or .LatestRelease.IsVerified .LatestRelease.IsRejected))}}
							<tr>
								<td>{{.ID}}</td>
								<td>
									<a class="tw-break-anywhere" href="{{.Owner.HomeLink}}">{{.Owner.Name}}</a>
									{{if .Owner.Visibility.IsPrivate}}
										<span class="text gold">{{svg "octicon-lock"}}</span>
									{{end}}
								</td>
								<td>
									<a class="tw-break-anywhere" href="{{.Link}}">{{.Name}}</a>
									{{if .IsArchived}}
										<span class="ui basic label">{{ctx.Locale.Tr "repo.desc.archived"}}</span>
									{{end}}
									{{if .Owner.Visibility.IsPrivate}}
										<span class="ui basic label">{{ctx.Locale.Tr "repo.desc.internal"}}</span>
									{{end}}
									{{if eq .ObjectFormatName "sha256"}}
										<span class="ui basic label">{{ctx.Locale.Tr "repo.desc.sha256"}}</span>
									{{end}}
								</td>
								<td>{{.NumWatches}}</td>
								<td>{{.NumStars}}</td>
								<td>{{.NumForks}}</td>
								<td>{{.NumIssues}}</td>
								<td>{{FileSize .GitSize}}</td>
								<td>{{FileSize .LFSSize}}</td>
								<td><b>{{.LatestRelease.Title}}</b></td>
								<td><span title="{{DateTime "short" .LatestRelease.CreatedUnix}}"><time data-format="short-date" datetime="{{DateTime "short" .LatestRelease.CreatedUnix}}">{{DateTime "short" .LatestRelease.CreatedUnix}}</time></span></td>
								<td>
									{{if .AddonRepository}}
										<button class="ui primary button" onclick="window.open('{{.Link}}/compare/{{index .AddonRepository.Versions 0}}...{{.LatestRelease.Sha1}}', '_blank');">{{ctx.Locale.Tr "Compare"}}</button>
									{{else}}
										<button class="ui primary button" disabled>{{ctx.Locale.Tr "Compare"}}</button>
									{{end}}
								</td>
								<td>
									<a class="ui green button delete-button" href="" data-modal-id="verify-modal" data-url="{{$.Link}}/release/verify?id={{.ID}}&page={{$.Page.Paginater.Current}}&sort={{$.SortType}}" data-name="{{.Name}}" data-release-title="{{.LatestRelease.Title}}">{{ctx.Locale.Tr "Verify"}}</a>
									<a class="ui red button delete-button" href="" data-modal-id="reject-modal" data-type="form-integrated" data-form="#rejection-reason-form" data-url="{{$.Link}}/release/reject?id={{.ID}}&page={{$.Page.Paginater.Current}}&sort={{$.SortType}}" data-name="{{.Name}}" data-release-title="{{.LatestRelease.Title}}">{{ctx.Locale.Tr "Reject"}}</a>
								</td>
							</tr>
						{{end}}
					{{end}}
				</tbody>
			</table>
		</div>
		<br />

