								<td>{{.NumForks}}</td>
								<td>{{.NumIssues}}</td>
								<td>{{FileSize .GitSize}}</td>
								<td>{{FileSize .LFSSize}}</td>
								<td>{{DateTime "short" .UpdatedUnix}}</td>
								<td>
									<span title="{{DateTime "short" .LatestRelease.CreatedUnix}}"><time data-format="short-date" datetime="{{DateTime "short" .LatestRelease.CreatedUnix}}">{{DateTime "short" .LatestRelease.CreatedUnix}}</time></span>
